{
	"name": "tabby",
	"version": "0.1",
	"manifest_version": 2,
	"description": "A simple Chrome extension to reign in those with bad tabits.",
	"icons": {
		"128": "./img/tabby_128.png"
	},
	"browser_action": {
		"default_icon": "./img/tabby_16.png",
		"default_popup": "popup.html",
		"default_title": "tabby"
	},
	"content_scripts": [ {
		"js": [ "js/lib/jquery-1.8.2.min.js", "js/app/content.js" ],
		"matches": [ "*://*/*" ],
		"run_at": "document_start"
		}
	],
	"minimum_chrome_version": "18",
	"permissions": [
		"tabs", "notifications"
	],
	 "background": {
    "scripts": ["./js/app/popup.js"]
  }
}
